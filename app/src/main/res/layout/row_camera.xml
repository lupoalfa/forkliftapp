<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
	android:descendantFocusability="blocksDescendants"
    android:padding="5dp" >

    <ImageView
		android:id="@+id/camera_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
		android:src="@drawable/camera" />

    <TextView
		android:id="@+id/camera_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/camera_icon"
		android:textSize="20sp"
		android:textStyle="bold" />

    <TextView
		android:id="@+id/camera_address"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/camera_name"
		android:layout_alignLeft="@+id/camera_name"
		android:textSize="12sp" />

	<ImageButton
		android:id="@+id/camera_edit"
		android:layout_width="40dp"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:layout_marginLeft="20dp"
		android:src="@drawable/dark_chevron"
		style="?android:attr/borderlessButtonStyle" />

</RelativeLayout>