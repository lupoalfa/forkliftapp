<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/activity_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="top"
    tools:context=".activities.AboutActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="안전 매뉴얼 일일 체크리스트"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_gravity="top"
        android:layout_marginBottom="60dp"/>

    <CheckBox
        android:id="@+id/checkBox1_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="안전벨트 착용 확인"
        android:textSize="17dp"
        android:layout_marginBottom="20dp"/>

    <CheckBox
        android:id="@+id/checkBox2_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="급출발, 급정지, 급회전 금지"
        android:textSize="17dp"
        android:layout_marginBottom="20dp"/>

    <CheckBox
        android:id="@+id/checkBox3_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="마스트를 뒤로 충분히 기울임"
        android:textSize="17dp"
        android:layout_marginBottom="20dp"/>

    <CheckBox
        android:id="@+id/checkBox4_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="옥내 주행 시 전조등을 켜고 운행"
        android:layout_marginBottom="20dp"/>

    <CheckBox
        android:id="@+id/checkBox5_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="제한속도 준수"
        android:textSize="17dp"
        android:layout_marginBottom="20dp"/>

    <CheckBox
        android:id="@+id/checkBox6_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="적재화물이 운전자 시야 방해 시 유도자를 \n배치하고, 후진으로 진행"
        android:textSize="17dp"
        android:layout_marginBottom="20dp"/>

    <CheckBox
        android:id="@+id/checkBox7_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="도로 주행 시 포크의 선단에 표식을 부착"
        android:textSize="17dp"
        android:layout_marginBottom="20dp"/>

    <CheckBox
        android:id="@+id/checkBox8_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="운전석 이외에 사람을 태우고 주행 금지"
        android:textSize="17dp"
        android:layout_marginBottom="60dp"/>

    <Button
        android:id="@+id/btn_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="공지사항"
        android:background="@drawable/button"
        android:textColor="@color/button_text"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btn_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="홈 화면"
        android:background="@drawable/button"
        android:textColor="@color/button_text"/>
</LinearLayout>